<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#010001"

    tools:context="com.example.cleaner208.calculator1.MainActivity">

    <EditText
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:id="@+id/editText"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/editsharp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="center_horizontal"
        android:id="@+id/gridLayout"
        android:layout_above="@+id/gridLayout2"
        android:layout_alignEnd="@+id/gridLayout2">


        <Button
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="sqr("
            android:id="@+id/btn_sqr"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="7dp"
            android:background="@drawable/button_style_4"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="X^2"
            android:id="@+id/btn_x2"
            android:layout_row="0"
            android:layout_column="1"

            android:layout_marginRight="7dp"
            android:background="@drawable/button_style_4"/>

        <Button
            android:layout_width="157dp"
            android:layout_height="40dp"
            android:text="清除"
            android:id="@+id/btn_ce"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/button_style_3"/>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center_horizontal"
        android:id="@+id/gridLayout2"
        android:layout_above="@+id/gridLayout3"
        android:layout_alignEnd="@+id/gridLayout3">

        <Button
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="sin("
            android:id="@+id/btn_sin"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="7dp"
            android:background="@drawable/button_style_4"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="cos("
            android:id="@+id/btn_cos"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginRight="7dp"
            android:background="@drawable/button_style_4"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="tan("
            android:id="@+id/btn_tan"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginRight="7dp"
            android:background="@drawable/button_style_4"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="c"
            android:id="@+id/btn_c"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/button_style_3"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:id="@+id/gridLayout3"
        android:layout_above="@+id/switch1"
        android:layout_alignEnd="@+id/switch1">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="7"
            android:textColor="#FF000000"
            android:id="@+id/btn_7"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="8"
            android:id="@+id/btn_8"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="#FF000000"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="9"
            android:id="@+id/btn_9"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginRight="25dp"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+"
            android:id="@+id/btn_add"
            android:layout_row="0"
            android:layout_column="3"
            android:textColor="#FF000000"
            android:background="@drawable/button_style_2"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="4"
            android:id="@+id/btn_4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:id="@+id/btn_5"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="6"
            android:id="@+id/btn_6"
            android:layout_row="1"
            android:layout_column="2"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-"
            android:id="@+id/btn_sub"
            android:layout_row="1"
            android:layout_column="3"
            android:textColor="#FF000000"
            android:background="@drawable/button_style_2"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1"
            android:id="@+id/btn_1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="2"
            android:id="@+id/btn_2"
            android:layout_row="2"
            android:layout_column="1"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="3"
            android:id="@+id/btn_3"
            android:layout_row="2"
            android:layout_column="2"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="×"
            android:id="@+id/btn_mul"
            android:layout_row="2"
            android:layout_column="3"
            android:textColor="#FF000000"
            android:background="@drawable/button_style_2"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="."
            android:id="@+id/btn_dot"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"
           />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="0"
            android:id="@+id/btn_0"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="#FF000000"
            android:background="@drawable/button_style"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="="
            android:id="@+id/btn_equ"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/button_style_4"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="÷"
            android:id="@+id/btn_div"
            android:layout_row="3"
            android:layout_column="3"
            android:textColor="#FF000000"
            android:background="@drawable/button_style_2"/>
    </GridLayout>

    <Switch
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/switch1"
    android:textOff="计算器"
    android:textOn="单位转换"
    android:layout_alignParentBottom="true"
    android:layout_alignEnd="@+id/editText"
    android:checked="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="计算器"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="45dp"
        android:layout_alignBottom="@+id/editText" />

</RelativeLayout>
